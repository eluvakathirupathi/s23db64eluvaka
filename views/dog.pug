extends layout

block content
  h1= title
  -
    let results=[
      { name: "Rocky", age: 4, breed: "Labrador"},
      { name: "Charlie", age: 5, breed: "German Shepherd"},
      { name: "Chintu", age: 3, breed:"Golden Retriever"}]
  div(class="container-fluid")
    div(class="row")
        for item, index in results
          div(class="col-sm-2" onclick=`buy(${index})`)
            p Name: #{item.name}
            p age: #{item.age}
            p breed: #{item.breed}
  script. 
    function buy(index) {
      alert(`You purchased item ${index}`);
    }