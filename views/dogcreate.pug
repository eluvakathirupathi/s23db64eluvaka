extends layout
block content
  h1= title
  form(id='DogForm', action="/resource/dogs", method="POST")
    div.form-group
      label.dogAttr(for='name') Dog Name
      input#name(type='text', name='name')
    div.form-group
      label.dogAttr(for='age') Dog Age
      input#age(type='number', name='age')
    div.form-group
      label.dogAttr(for='breed') Dog Breed
      input#breed(type='text', name='breed')
    input(type="submit")
  script.
    document.forms['DogForm'].addEventListener('submit', (event) => {
      event.preventDefault();
      // TODO do something here to show the user that the form is being submitted
      fetch(event.target.action, {
        method: 'POST',
        body: new URLSearchParams(new FormData(event.target)) // event.target is the form
      }).then((resp) => {
        return resp.json(); // or resp.text() or whatever the server sends
      }).then((body) => {
        alert("Save succeeded");
        // TODO handle the body
      }).catch((error) => {
        // TODO handle the error
        alert("Save failed " + error);
      });
    })
